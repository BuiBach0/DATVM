
@{
    var address = ViewBag.Address as IEnumerable<DevApps.Models.COMPANY_ADDRESS>;
    var bannerUS = ViewBag.BannerUs as IEnumerable<DevApps.Models.BANNER>;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if ((int)Session["language"] == 1)
