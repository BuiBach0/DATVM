@model DevApps.ModelsView.ModelsNews
@{
    var count = 1;
    var bannerUS = ViewBag.BannerUs as IEnumerable<DevApps.Models.BANNER>;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if ((int)Session["language"] == 1)
{
    <section class="dev-wc container">
        <div class="industries">
            <div class="row justify-content-between">
                @foreach (var item in bannerUS)
                {
                    if (item.ORDER == 3)
                    {
                        <div class="col-12 col-lg-6">
                            <div class="indus-h text-left">
                                <h2>@item.TITLE</h2>
                            </div>
                            <div class="indus-ct text-left">
                                <p>
                                    @item.DESCRIPTION
                                </p>
                            </div>
                            <div class="indus-btn">
                                <button class="btn">
                                    Contact Us
                                </button>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="indus-img">
                                <img src="@item.IMAGE" class="w-100" alt="ind" />
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
        @foreach (var item in Model.news)
        {

            if (count % 2 != 0)
            {
                <div class="consumer">
                    <div class="row justify-content-between">
                        <div class="col-12 col-lg-6">
                            <div class="consumer-img">
                                <img src="@item.IMAGE" class="w-100" alt="ind" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="consumer-h text-left">
                                <h6><span class="font-diff">our</span> industries</h6>
                                <h3>@item.TITLE</h3>
                            </div>
                            <div class="indus-ct text-left">
                                <div>
                                    @Html.Raw(item.DESCRIPTION)
                                </div>
                            </div>
                            <div class="consumer-btn">
                                <button class="btn">
                                    LEARN MORE
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            if (count % 2 == 0)
            {
                <div class="consumer">
                    <div class="row justify-content-between">
                        <div class="col-12 col-lg-6">
                            <div class="consumer-h text-right">
                                <h6><span class="font-diff">our</span> industries</h6>
                                <h3>@item.TITLE</h3>
                            </div>
                            <div class="indus-ct text-right">
                                <div>
                                    @Html.Raw(item.DESCRIPTION)
                                </div>
                            </div>
                            <div class="consumer-btn">
                                <button class="btn">
                                    LEARN MORE
                                </button>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="consumer-img">
                                <img src="@item.IMAGE" class="w-100" alt="ind" />
                            </div>
                        </div>
                    </div>
                </div>
            }
            count++;
        }

    </section>
}
